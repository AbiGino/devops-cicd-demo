pipeline {
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/AbiGino/devops-cicd-demo.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Push Image') {
      steps{
        script {
          dockerImage.push("${env.BUILD_NUMBER}")
          dockerImage.push("latest")
        }
      }
    }
//     stage('Deploy to K8S'){
//         steps{
//             sh 'kubectl apply -f deployment.yml'
//        }
//     }
  }
}